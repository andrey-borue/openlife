{# var \App\Application\Sonata\NewsBundle\Entity\Post post #}

<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark" style="background: url('{% path post.image, 'w500' %}') no-repeat; background-size: cover; ">
    <div class="col-md-6 px-0">
        <h1 class="display-4 font-italic">{{ post.title }}</h1>
        <p class="lead my-3">{{ post.abstract }}</p>
        <p class="lead mb-0"><a href="{{ url('sonata_news_view', { 'permalink': sonata_news_permalink(post) }) }}" class="text-white font-weight-bold">Продолжение...</a></p>
    </div>
</div>